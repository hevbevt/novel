{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["element-plus/global"]
  },
  "include": ["docs/.vitepress/**/*.ts", "docs/**/*.md", "docs/**/*.vue", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
